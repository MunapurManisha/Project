<script>
    function SignUp() {

        $("#ShowModal").modal();
        $("#message1").hide();
        $("#message2").hide();
    }


    function SaveForm() {
        var name = $("#MyUserName").val();
        var pwd = $("#Password").val();
        var email = $("#Email").val();
        if (name == "" || pwd == "" || email == "") {
            $("#message1").hide();
            $("#message2").show();
            return false;
        }
        var data = $("#Registration").serialize();
        $.ajax({
            type: "post",
            data: data,
            url: "/Registration/SaveData",
            success: function (result) {

                $("#message1").show();
                $("#message2").hide();
                $("#Registration")[0].reset();
            }
        });
    }
    //Login System
    $("#msg").hide();
    var Login = function () {
        var data = $("#LoginForm").serialize();
        $.ajax({

            type: "post",
            url: "/Registration/CheckValidUser",
            data: data,
            success: function (result) {
                if (result == "Fail") {

                    $("#LoginForm")[0].reset();
                    $("#msg").show();
                }
                else {
                    window.location.href = "/Registration/AfterLogin";
                    $("#msg").hide();
                }

            }
        });
    }
    function todo() { SaveForm(); SignUp; }
</script>
<script>
    var reg = document.getElementById('Registration');
    var ShowModal = document.getElementById('ShowModal');
    var number = document.getElementById('number');
    var MyUserName = document.getElementById('LastName');
    var email = document.getElementById('email');
    window.onload = () => {
        number.addEventListener('focusout', (event) => {
            if (!(/^(7|8|9)\d{9}$/.test(number.value))) {
                number.focus();
                number.addEventListener('keyup', (event) => {
                    if (!(/^(7|8|9)\d{9}$/.test(number.value))) {
                        number.setCustomValidity('Invalid Mobile Number.!');
                        reg.reportValidity();
                    } else {
                        number.setCustomValidity('');
                    }
                })
            }
        });

        MyUserName.addEventListener('focusout', (event) => {
            if (/^[a-zA-Z]{3,15}$/.test(MyUserName.value)) {
                MyUserName.setCustomValidity("");
                //reg.reportValidity();
            } else {
                MyUserName.focus();
                MyUserName.setCustomValidity("Invalid UserName");
                reg.reportValidity();
            }
        });
    }

</script>