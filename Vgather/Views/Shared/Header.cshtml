<div class="modal fade" id="ShowModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Registration Form</h4>
                <div id="message1">
                    <div class="alert alert-success">
                        <span class="glyphicon glyphicon-ok"></span><strong>
                            Registration Success <br />
                            Please Close this window and Login with the crendentials entered. 
                        </strong>

                    </div>
                </div>
                <div id="message2">
                    <div class="alert alert-danger">
                        <span class="glyphicon glyphicon-remove"></span><strong> Error Message!!Your registration is incomplete </strong>
                    </div>
                </div>
                <div class="modal-body">
                    <form id="Registration">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input class="form-control" type="text" name="FirstName" id="firstName" placeholder="First Name" style="width:300px;" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input class="form-control" type="text" name="LastName" id="lastName" placeholder="Last Name" style="width:300px;" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-baby-formula"></i></span>
                                <input class="form-control" type="datetime" name="DOB" id="dob" placeholder="Date Of Birth DD/MM/YYYY" style="width:300px;" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-user"></i>
                                </span>
                                &nbsp;&nbsp; @Html.RadioButton("Gender", "Male") Male
                                &nbsp; &nbsp;@Html.RadioButton("Gender", "FeMale")Female

                                <!--Male <input class="form-control" type="radio" name="gender" id="gender" value="Male" />
            Female <input class="form-control" type="radio" name="gender" id="gender" value="Female" />-->
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                                <input class="form-control" type="text" name="ContactNumber" id="number" placeholder="Contact Number" title="Should be more than 10 number and start from 7/8/9" style="width:300px;" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input class="form-control" type="text" name="UserId" id="userId" placeholder="User Id" style="width:300px;" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input class="form-control" type="password" name="Password" id="password" placeholder="Password" style="width:300px;" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input class="form-control" type="email" name="Email_ID" id="Email_ID" placeholder="Email_ID" style="width:300px;" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-question-sign"></i> &nbsp;Favourite Boy Band?</span>
                                <input class="form-control" type="text" name="question1" id="question1" placeholder=" favourite Band" style="width:160px;" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-question-sign"></i> &nbsp;Favourite pet?</span>
                                <input class="form-control" type="text" name="question2" id="question2" placeholder="Answer your favourite Pet" style="width:210px;" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-question-sign"></i> &nbsp;Favourite Food?</span>
                                <input class="form-control" type="text" name="question3" id="question3" placeholder="Answer your favourite food" style="width:210px;" />
                            </div>
                        </div>
                    </form>
                    <div class="form-group">
                        <button class="btn btn-info form-control" type="submit" onclick="SaveForm(); SignUp();"><i class="glyphicon glyphicon-registration-mark"></i> Submit </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function SignUp() {

        $("#ShowModal").modal();
        $("#message1").hide();
        $("#message2").hide();
    }

    function SaveForm() {
        var name = $("#MyUserName").val();
        var pwd = $("#Password").val();
        var email = $("#Email").val();
        if (name == "" || pwd == "" || email == "") {
            $("#message1").hide();
            $("#message2").show();
            return false;
        }
        var data = $("#Registration").serialize();
        $.ajax({
            type: "post",
            data: data,
            url: "/Registration/SaveData",
            success: function (result) {

                $("#message1").show();
                $("#message2").hide();
                $("#Registration")[0].reset();
            }
        });
    }
    //Login System
    $("#msg").hide();
    var Login = function () {
        var data = $("#LoginForm").serialize();
        $.ajax({

            type: "post",
            url: "/Registration/CheckValidUser",
            data: data,
            success: function (result) {
                if (result == "Fail") {

                    $("#LoginForm")[0].reset();
                    $("#msg").show();
                }
                else {
                    window.location.href = "/Registration/AfterLogin";
                    $("#msg").hide();
                }

            }
        });
    }



</script>















